<div class="container mt-4 mb-4">
    <h2>Tạo khóa học</h2>
    <form method="POST" action="/course/store">
        <div class="form-group mt-4">
          <label>Tiêu đề</label>
          <input type="text" class="form-control"  name="title" placeholder="Nhập tiêu đề...">
        </div>
        <div class="form-group mt-4">
            <label>Mô tả khóa học</label>
            <input type="text" class="form-control"  name="description" placeholder="Nhập mô tả...">
        </div>
        <div class="form-group mt-4">
            <label>Video ID</label>
            <input type="text" class="form-control"  name="videoID" placeholder="Nhập video id...">
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Đăng</button>
        </div>
    </form>
</div>