<div class="container mt-4 mb-4">
    <h2>Sửa khóa học</h2>
    <form method="POST" action="/course/<%=course._id%>?_method=PUT">
        <div class="form-group mt-4">
          <label>Tiêu đề</label>
          <input type="text" class="form-control" value="<%= course.title %>" name="title">
        </div>
        <div class="form-group mt-4">
            <label>Mô tả khóa học</label>
            <textarea  class="form-control" value=" " name="description" ><%= course.description %></textarea>
        </div>
        <div class="form-group mt-4">
            <label>Video ID</label>
            <input type="text" class="form-control" value="<%= course.videoID %>" name="videoID">
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </div>
    </form>
</div>