<div class="container mt-4 mb-4">
    <div class="row">
        <% courses.forEach(function(cour) { %>
            <div class="col-sm-6 col-lg-4 mt-4">

                <div class="card">
                    <a href="/course/<%= cour.slug %>">
                        <img src="<%= cour.img %>" class="card-img-top" alt="...">
                    </a>

                    <div class="card-body">
                        <a href="/course/<%= cour.slug %>" style="text-decoration: none;">
                            <h5 class="card-title">
                                <%= cour.title %>
                            </h5>
                        </a>

                        <p class="card-text">
                            <%= cour.description %>
                        </p>
                        <a href="/course/<%= cour.slug %>" class="btn btn-primary">Mua khóa học</a>
                    </div>
                </div>

            </div>
            <% }) %>
    </div>
</div>